border-size = 0

; fonts
; font-0 = UbuntuMono Nerd Font:size=12;2
font-0 = Monofur Nerd Font:size=12;2
font-1 = Feather:style=Bold:size=12;2
font-2 = DaddyTimeMono Nerd Font Complete:size=13;3

; font for the rounded thingis
font-3 = DaddyTimeMono Nerd Font:size=21;5

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
;   none
tray-position = right

; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 26

tray-background = ${colors.background-alt}
tray-foreground = ${colors.foreground}

tray-offset-x = 0
tray-offset-y = 0
tray-padding = 6
tray-scale = 1.0

include-directory=./modules
include-directory=./util-modules

