# notification panel
super + n
  kill -s USR1 $(pidof deadd-notification-center)

# launch firefox
super + b
	bspc desktop --focus ^3 && firefox

super + s
    spotify

super + v
    brave-dev

super + d
    discord
super + alt + t
    telegram-desktop

super + p
  pavucontrol

# Wallpapers
super + alt + e
    echo {/home/john/Pictures/Backgrounds,/home/john/Pictures/landscapes1} > /home/john/.WALLPAPERS_DIR && /home/john/.scripts/set-wallpaper.sh

# screenshots
Print
    scrot -e 'xclip -selection clipboard -t image/png -i $f' ~/Pictures/screenshots/
