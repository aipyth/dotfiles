# Media keys
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
   # amixer set Master 5%- && source ~/.scripts/show-volume.sh dec &
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
   # amixer set Master 5%+ && source ~/.scripts/show-volume.sh inc &

XF86AudioMute
    amixer set Master toggle
XF86AudioNext
    playerctl next
    # spt playback -n
XF86AudioPrev
    playerctl previous
    # spt playback -p
XF86AudioPause
    spt playback -t
XF86AudioPlay
    playerctl play-pause
    # spt playback -t
alt + XF86AudioPause
    spt playback -T
alt + XF86AudioPlay
    playerctl play
XF86AudioStop
    playerctl stop

XF86MonBrightnessDown
    brightnessctl -s set 2%- && source ~/.scripts/show-brightness.sh dec &

    # brightnessctl -s set 2%- && ~/.scripts/show-brightness.sh

XF86MonBrightnessUp
    brightnessctl -s set +2% && source ~/.scripts/show-brightness.sh inc &

    # source ~/.scripts/show-brightness.sh inc &
    # brightnessctl -s set +2% && ~/.scripts/show-brightness.sh

# Change keyboard language
alt + shift
    # {setxkbmap us, setxkbmap ru, setxkbmap ua}
    {setxkbmap us, setxkbmap ua}


