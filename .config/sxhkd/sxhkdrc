    scrot ~/Pictures/screenshots/
ctrl + Print
    scrot -u -e 'xclip -selection clipboard -t image/png -i $f' ~/Pictures/screenshots/
shift + Print
    scrot -s -e 'xclip -selection clipboard -t image/png -i $f' ~/Pictures/screenshots/
