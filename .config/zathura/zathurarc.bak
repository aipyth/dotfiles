### Settings from original zathurarc ###
set adjust-open "best-fit"
set pages-per-row 1
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100
set zoom-min 10
set guioptions ""
set font "Roboto Regular 13"
set window-title-basename "true"
set selection-clipboard "clipboard"
set render-loading              true
set adjust-open width

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#c7e3ec'
set completion-bg '#101615'

# Command line completion group elements
set completion-group-fg '#648EA8'
set completion-group-bg '#101615'

# Current command line completion element
set completion-highlight-fg '#101615'
set completion-highlight-bg '#c7e3ec'

# Default foreground/background color
set default-bg rgba(16,22,21,1)

# Input bar
set inputbar-fg '#c7e3ec'
set inputbar-bg '#101615'

# Notification
set notification-fg '#c7e3ec'
set notification-bg '#101615'

# Error notification
set notification-error-fg '#c7e3ec'
set notification-error-bg '#5FA7DD'

# Warning notification
set notification-warning-fg '#c7e3ec'
set notification-warning-bg '#5FA7DD'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#c7e3ec'
set statusbar-bg '#101615'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#648EA8'
set highlight-active-color '#648EA8'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#c7e3ec'

# 'Loading...' text
set render-loading-fg '#c7e3ec'
set render-loading-bg '#101615'

# Index mode
set index-fg '#c7e3ec'
set index-bg '#101615'

# Selected element in index mode
set index-active-fg '#101615'
set index-active-bg '#c7e3ec'